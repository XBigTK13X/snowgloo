<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:id="@+id/volume_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Adjust music volume" />

    <SeekBar
        android:id="@+id/volume_slider"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:progressDrawable="@drawable/volume_bar_progress"
        android:thumb="@drawable/volume_bar_thumb"
        android:layout_margin="5dp"/>

    <Button
        android:id="@+id/download_update_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Update Snowgloo" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select a server to use" />

    <RadioGroup
        android:id="@+id/server_url_radios"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/prod_server_radio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Settler" />

        <RadioButton
            android:id="@+id/dev_server_radio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Vondoom" />
    </RadioGroup>

    <TextView
        android:id="@+id/version_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Snowgloo" />

    <TextView
        android:id="@+id/user_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Logged in as ???" />

    <Button
        android:id="@+id/logout_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Logout" />

    <TextView
        android:id="@+id/error_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/debug_log_toggle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Toggle Debug Logging" />

    <TextView
        android:id="@+id/debug_log_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/enable_simple_ui_mode_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enable Simple UI Mode" />
</LinearLayout>